{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Attendance list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Userattended</th>
                <th>Sessionattended</th>
                <th>Eventattended</th>
                <th>Dateofattendance</th>
                <th>Eligibleattendance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('attendance_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.userAttended }}</td>
                <td>{{ entity.sessionAttended }}</td>
                <td>{{ entity.eventAttended }}</td>
                <td>{% if entity.dateOfAttendance %}{{ entity.dateOfAttendance|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.eligibleAttendance }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('attendance_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('attendance_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('attendance_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
